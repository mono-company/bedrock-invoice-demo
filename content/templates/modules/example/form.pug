block append pageVariables
    - var pageTitle = "Form example"

block content
    
    // Hidden popover content
    .hide(data-popover-html="one")
        .popover-header
            .bc-navbar.bc-navbar-gray-lighter.bc-navbar-medium
                .bc-navbar-left
                    .bc-navbar-divider
                        .bc-navbar-brand.bc-navbar-brand-small Popover title
                .bc-navbar-right
                    .bc-navbar-divider
                        a.btn.btn-default.navbar-btn.btn-icon(href='#')
